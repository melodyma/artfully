<h1>artfully</h1>


<%= form_tag artifacts_path, method: :get do %>
  <div>
    <%= text_field_tag :query, params[:query] %>
  <div>
  <div>
    <%= select_tag :city, options_for_select([1,1], [2,2]) %>
  </div>
  <div>
    <%= select_tag :country, options_for_select([1,1], [2,2]) %>
  </div>
  <div>
    <%= submit_tag "SEARCH", :name => nil %>
  </div>
<% end %>

<hr>

<% render @artifacts %>

<%= link_to "Submit artwork!", new_artifact_path %>